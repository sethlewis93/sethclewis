extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= project.project_name

        h5= project.description
        br
        h6 Reviews:
        p= `"${project.review_comments}"`

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in project.technologies
            li= tech

        a.button.expanded(href=`${project.live_link}`, target="_blank") Visit
        a.button.expanded(href=`${project.github_link}`, target="_blank") GitHub Repo
    
    img.image(src=`/static/${project.image_urls[0]}`)
    img.image(src=`/static/${project.image_urls[1]}`)
    img.image(src=`/static/${project.image_urls[2]}`)
    
    if project.image_urls[3]
      img.image(src=`/static/${project.image_urls[3]}`)