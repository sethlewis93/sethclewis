extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      pre
      h1 Seth Lewis: Full Stack Developer

      p.lead.text-light
        | Production Sites
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each product in production
        .cell
          a(href=`/production/${production.id}`)
            img.thumbnail(src=`/static/${production.image_urls[0]}`)
            h5= production.website

      p.lead.text-light
        | Personal Projects
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}`)
            h5= project.project_name

      
